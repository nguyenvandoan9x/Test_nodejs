<form   action="/product/updated" method="POST" enctype="multipart/form-data">
<h1>Sửa sản phẩm</h1>
{{#with docs}}
<input type="hidden" name="_id" value="{{_id}}">
    <div class="form-group">
        <label for="name">name</label>
        <input type="text" class="form-control" placeholder="name product" name="name" value="{{name}}">
    </div>
    <div class="form-group">
        <label for="description">description</label>
        <input type="text" class="form-control" placeholder="description" name="description" value="{{description}}">
    </div>
    <div class="form-group">
        <label for="price">Price</label>
        <input type="number" class="form-control" placeholder="price" name="price" value="{{price}}">
    </div>
    <div class="form-group">
        <input id="input-file-update-product" type="file" class="form-control-flie" name="image" required ><br>
        <img id="img-update-product" src="/{{image}}" alt="" width="200px" class="mt-2 mb-2">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <button type="reset" class="btn btn-danger">reset</button>
    {{/with}}
</form>

<script>
    var img = document.getElementById('img-update-product')
    var inputFile = document.getElementById('input-file-update-product')
    let reader = new FileReader()
    inputFile.onchange = function (e) {
        reader.readAsDataURL(inputFile.files[0]);
        reader.onloadend = () => {
            img.setAttribute('src', reader.result);
        };

    }

</script>